<h1>Workout Tracker</h1>
	<form>
		<fieldset>
			<legend>Exercise Tracking</legend>
				<label class='inputs' for='name'>Name:</label>
				<input type='text' id='name' name='name' size='30' maxlength='100'>
				<label class='inputs' for='reps'>Reps:</label>
				<input type='text' id='reps' name='reps' size='30' maxlength='100'>
				<label class='inputs' for='weight'>Weight:</label>
				<input type='text' id='weight' name='Weight' size='30' maxlength='100'>
				<label class='inputs' for='date'>Date:</label>
				<input type='date' id='date' name='date' size='30' maxlength='100'>
				<label class='inputs' for='unit'>Unit:</label>
					<select id='unit' name='unit'>
						<option value='0'>KG</option>
						<option value='1'>LBS</option>
					</select>
				<input type='submit' id='subworkout' value='Submit'>
		</fieldset>
	</form>
<table id='mainTable' style="border:solid black">
    <caption>Workout Table</caption>
    <thead>
        <tr style="border:solid black">
            <th style="border:solid black">Name</th>
            <th style="border:solid black">Reps</th>
            <th style="border:solid black">Weight</th>
            <th style="border:solid black">Date</th>
            <th style="border:solid black">Unit</th>
            <th style="border:solid black">Delete</th>
            <th style="border:solid black">Edit</th>
            <th style="border:solid black">Update</th>
        </tr>
    </thead>
    <tbody style="border:solid black">
        {{#each entries}}
        <tr id="workoutTable" style="border:solid black">
            <td class="entryId" id="entryId" hidden style="border:solid black">{{this.id}}</td>
            <td id="entryName" style="border:solid black">{{this.name}}</td>
            <td id="entryReps" style="border:solid black">{{this.reps}}</td>
            <td id="entryWeight" style="border:solid black">{{this.weight}}</td>
            <td id="entryDate" style="border:solid black">{{this.date}}</td>
            <td class="entryUnit" id="entryUnit" style="border:solid black">{{this.lbs}}</td>
            <td><button class="deleteRow" type="button" value={{this.id}}>Delete</button></td>
            <td><button class="editRow" type="button" value={{this.id}}>Edit</button></td>
            <td><button class="updateRow" type="button" value={{this.id}}>Update</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>